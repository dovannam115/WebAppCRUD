@page
@model ControlCenterApp.Pages.A3StdUprSystems.IndexModel
@{
    ViewData["Title"] = "UPR Systems";
}

<h1>UPR Systems</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> New
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Group</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.UprSystem</td>
                <td>@item.ObjDescription</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.ObjId">
                        <i class="bi bi-pencil-square me-1"></i>
                    </a>|
                    <a asp-page="Delete" asp-route-id="@item.ObjId" class="text-danger">
                        <i class="bi bi-trash me-1"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
