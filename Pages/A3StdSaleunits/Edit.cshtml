@page "{id:guid}"
@model ControlCenterApp.Pages.A3StdSaleunits.EditModel
@{
    ViewData["Title"] = "Edit Sale Unit";
}

<h1>Edit Sale Unit</h1>

<form method="post">
    <input type="hidden" asp-for="Saleunit.SaleunitId" />
    <div class="mb-3">
        <label asp-for="Saleunit.SaleunitCode" class="form-label"></label>
        <input asp-for="Saleunit.SaleunitCode" class="form-control" />
        <span asp-validation-for="Saleunit.SaleunitCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Saleunit.SaleunitName" class="form-label"></label>
        <input asp-for="Saleunit.SaleunitName" class="form-control" />
        <span asp-validation-for="Saleunit.SaleunitName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Saleunit.Note" class="form-label"></label>
        <input asp-for="Saleunit.Note" class="form-control" />
        <span asp-validation-for="Saleunit.Note" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Saleunit.PlReviewCfg" class="form-label"></label>
        <input asp-for="Saleunit.PlReviewCfg" class="form-control" />
        <span asp-validation-for="Saleunit.PlReviewCfg" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Saleunit.InsertTime" class="form-label"></label>
        <input asp-for="Saleunit.InsertTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="Saleunit.InsertTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Saleunit.SaleunitTypeId" class="form-label"></label>
        <input asp-for="Saleunit.SaleunitTypeId" class="form-control" />
        <span asp-validation-for="Saleunit.SaleunitTypeId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Saleunit.SaleunitGroupId" class="form-label"></label>
        <input asp-for="Saleunit.SaleunitGroupId" class="form-control" />
        <span asp-validation-for="Saleunit.SaleunitGroupId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Saleunit.SaleunitRegionId" class="form-label"></label>
        <input asp-for="Saleunit.SaleunitRegionId" class="form-control" />
        <span asp-validation-for="Saleunit.SaleunitRegionId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
