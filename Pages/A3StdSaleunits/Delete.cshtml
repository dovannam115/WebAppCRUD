@page "{id:guid}"
@model ControlCenterApp.Pages.A3StdSaleunits.DeleteModel
@{
    ViewData["Title"] = "Delete Sale Unit";
}

<h1>Delete Sale Unit</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Saleunit.SaleunitName</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Saleunit.SaleunitCode)
        </dt>
        <dd class="col-sm-10">@Model.Saleunit.SaleunitCode</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Saleunit.SaleunitName)
        </dt>
        <dd class="col-sm-10">@Model.Saleunit.SaleunitName</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Saleunit.Note)
        </dt>
        <dd class="col-sm-10">@Model.Saleunit.Note</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Saleunit.PlReviewCfg)
        </dt>
        <dd class="col-sm-10">@Model.Saleunit.PlReviewCfg</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Saleunit.SaleunitId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
