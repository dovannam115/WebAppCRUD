@page
@model ControlCenterApp.Pages.SaleUnits.IndexModel
@{
    ViewData["Title"] = "Sale Units";
}

<h1>Sale Units</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<div class="mb-3">
    <input id="tableSearch" type="text" class="form-control" placeholder="Search..." />
</div>

<div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
<table id="saleUnitsTable" class="table table-striped">
    <thead>
        <tr>
            <th class="sortable">Code</th>
            <th class="sortable">Name</th>
            <th class="sortable">Note</th>
            <th class="sortable">PL Review Cfg</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SaleUnits)
{
        <tr data-id="@item.SaleUnitId">
            <td>@item.SaleUnitCode</td>
            <td>@item.SaleUnitName</td>
            <td>@item.Note</td>
            <td>@item.PlReviewCfg</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.SaleUnitId">Edit</a> |
                <a asp-page="Delete" asp-route-id="@item.SaleUnitId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

@section Scripts{
    <script src="~/js/saleunit-table.js" asp-append-version="true"></script>
}
