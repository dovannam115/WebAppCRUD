@page "{id:guid}"
@model ControlCenterApp.Pages.SaleUnits.DeleteModel
@{
    ViewData["Title"] = "Delete Sale Unit";
}

<h1>Delete Sale Unit</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.SaleUnit.SaleUnitName</h4>
    <dl class="row">
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.SaleUnit.SaleUnitCode</dd>
        <dt class="col-sm-2">Note</dt>
        <dd class="col-sm-10">@Model.SaleUnit.Note</dd>
        <dt class="col-sm-2">PL Review Cfg</dt>
        <dd class="col-sm-10">@Model.SaleUnit.PlReviewCfg</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="SaleUnit.SaleUnitId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
