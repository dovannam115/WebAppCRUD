@page "{id:guid}"
@model ControlCenterApp.Pages.A3GldeStdProducts.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form method="post">
    <input type="hidden" asp-for="Item.RefId" />
    <div class="mb-3">
        <label asp-for="Item.PProduct" class="form-label"></label>
        <input asp-for="Item.PProduct" class="form-control" />
        <span asp-validation-for="Item.PProduct" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.PProductName" class="form-label"></label>
        <input asp-for="Item.PProductName" class="form-control" />
        <span asp-validation-for="Item.PProductName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.PSystem" class="form-label"></label>
        <input asp-for="Item.PSystem" class="form-control" />
        <span asp-validation-for="Item.PSystem" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.ProductGroupL2Id" class="form-label"></label>
        <select asp-for="Item.ProductGroupL2Id" asp-items="Model.ProductGroupL2SelectList" class="form-select searchable"></select>
        <span asp-validation-for="Item.ProductGroupL2Id" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
