@page
@model ControlCenterApp.Pages.A3GldeStdProducts.IndexModel
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Create New
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>System</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items)
{
    <tr>
        <td>@item.PProduct</td>
        <td>@item.PProductName</td>
        <td>@item.PSystem</td>
        <td>
            <a asp-page="Edit" asp-route-id="@item.RefId">
                <i class="bi bi-pencil-square me-1"></i>Edit
            </a> |
            <a asp-page="Delete" asp-route-id="@item.RefId" class="text-danger">
                <i class="bi bi-trash me-1"></i>Delete
            </a>
        </td>
    </tr>
}
    </tbody>
</table>
