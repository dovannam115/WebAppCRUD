@page "{id:guid}"
@model ControlCenterApp.Pages.A3GldeStdProducts.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Item.PProductName</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.PProduct)
        </dt>
        <dd class="col-sm-10">
            @Model.Item.PProduct
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.PSystem)
        </dt>
        <dd class="col-sm-10">
            @Model.Item.PSystem
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Item.RefId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
