@page
@model ControlCenterApp.Pages.A3StdGldeMapRules.CreateModel
@{
    ViewData["Title"] = "Create Map Rule";
}

<h1>Create Map Rule</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Item.RuleName" class="form-label">Name</label>
        <input asp-for="Item.RuleName" class="form-control" />
        <span asp-validation-for="Item.RuleName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.PeriodStart" class="form-label">Period Start</label>
        <input asp-for="Item.PeriodStart" class="form-control" />
        <span asp-validation-for="Item.PeriodStart" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.PeriodEnd" class="form-label">Period End</label>
        <input asp-for="Item.PeriodEnd" class="form-control" />
        <span asp-validation-for="Item.PeriodEnd" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.MapOrderId" class="form-label">Map Order</label>
        <select asp-for="Item.MapOrderId" asp-items="Model.MapOrderSelectList" class="form-select searchable"></select>
        <span asp-validation-for="Item.MapOrderId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.SaleunitId" class="form-label">Saleunit</label>
        <select asp-for="Item.SaleunitId" asp-items="Model.SaleunitSelectList" class="form-select searchable"></select>
        <span asp-validation-for="Item.SaleunitId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.ProductGroupL2Id" class="form-label">Product Group L2</label>
        <select asp-for="Item.ProductGroupL2Id" asp-items="Model.ProductGroupL2SelectList" class="form-select searchable"></select>
        <span asp-validation-for="Item.ProductGroupL2Id" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.UprSystemId" class="form-label">UPR System</label>
        <select asp-for="Item.UprSystemId" asp-items="Model.UprSystemSelectList" class="form-select searchable"></select>
        <span asp-validation-for="Item.UprSystemId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.Note" class="form-label">Note</label>
        <input asp-for="Item.Note" class="form-control" />
        <span asp-validation-for="Item.Note" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
