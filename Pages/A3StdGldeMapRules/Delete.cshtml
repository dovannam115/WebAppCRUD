@page "{id:guid}"
@model ControlCenterApp.Pages.A3StdGldeMapRules.DeleteModel
@{
    ViewData["Title"] = "Delete Map Rule";
}

<h1>Delete Map Rule</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Item.RuleName</h4>
    <dl class="row">
        <dt class="col-sm-2">Period</dt>
        <dd class="col-sm-10">@Model.Item.PeriodStart - @Model.Item.PeriodEnd</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Item.ObjId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
