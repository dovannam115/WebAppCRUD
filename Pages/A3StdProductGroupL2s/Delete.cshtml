@page "{id:guid}"
@model ControlCenterApp.Pages.A3StdProductGroupL2s.DeleteModel
@{
    ViewData["Title"] = "Delete Product Group L2";
}

<h1>Delete Product Group L2</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Item.ProductGroupL2</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ObjDescription)
        </dt>
        <dd class="col-sm-10">
            @Model.Item.ObjDescription
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Item.ObjId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
