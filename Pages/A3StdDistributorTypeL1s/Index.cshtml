@page
@model ControlCenterApp.Pages.A3StdDistributorTypeL1s.IndexModel
@{
    ViewData["Title"] = "Distributor Type L1s";
}

<h1>Distributor Type L1s</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> New
    </a>
</p>

<table class="table">
    <thead>
        <tr>
                <th>@Html.DisplayNameFor(model => model.Items[0].DistributorTypeL1)</th>
                <th>@Html.DisplayNameFor(model => model.Items[0].ObjDescription)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items)
{
        <tr>
            <td>@item.DistributorTypeL1</td>
            <td>@item.ObjDescription</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.ObjId">
                    <i class="bi bi-pencil-square me-1"></i>
                </a>|
                <a asp-page="Delete" asp-route-id="@item.ObjId" class="text-danger">
                    <i class="bi bi-trash me-1"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
