@page
@model ControlCenterApp.Pages.A3StdGldeMapOrders.IndexModel
@{
    ViewData["Title"] = "Map Orders";
}

<h1>Map Orders</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> New
    </a>
</p>

<table class="table">
    <thead>
        <tr>
                <th>@Html.DisplayNameFor(model => model.Items[0].MapOrder)</th>
                <th>@Html.DisplayNameFor(model => model.Items[0].ObjDescription)</th>
                <th>@Html.DisplayNameFor(model => model.Items[0].LogicOrder)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items)
{
    <tr>
        <td>@item.MapOrder</td>
        <td>@item.ObjDescription</td>
        <td>@item.LogicOrder</td>
        <td>
            <a asp-page="Edit" asp-route-id="@item.ObjId">
                <i class="bi bi-pencil-square me-1"></i>
            </a>|
            <a asp-page="Delete" asp-route-id="@item.ObjId" class="text-danger">
                <i class="bi bi-trash me-1"></i>
            </a>
        </td>
    </tr>
}
    </tbody>
</table>
